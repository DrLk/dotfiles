/* Main Config (main) */

/* ---- Configuration ---- */
configuration {
    modi:                       "drun,run,filebrowser";
    font:                       "Fira Code SemiBold 14";
    show-icons:                 true;
    display-drun:               "ÓØÜ";
	display-run:                "ÓØä";
    display-filebrowser:        "Ôí•";
    display-window:             "Û±Ç¨";
	drun-display-format:        "{name}";
    hover-select:               true;
    me-select-entry:            "MouseSecondary";
    me-accept-entry:            "MousePrimary";
    window-format:              "{w} ¬∑ {c} ¬∑ {t}";
	dpi:						1;
    
}

/* ---- Load pywal colors (custom wal template) ---- */
@import "~/.config/rofi/pywal-color/pywal-theme.rasi"

/* ---- Window ---- */
window {
    width:						650px;
	/*height:						450px;*/
    x-offset:                   0px;
    y-offset:                   0px;
    spacing:                    0px;
    padding:                    1px;
    margin:                     0px; 
    border:                     2px;
    border-color:               @active-background;
    cursor:                     "default";
    location:                   center;
    anchor:                     center;
    fullscreen:                 false;
    enabled:                    true;
    border-radius:              12px;
    background-color:           rgba(255, 255, 255, 0.6);
 	
}

/* ---- Mainbox ---- */
mainbox {
    enabled:                    true;
    orientation:                vertical;
	padding:					8px;
    background-color:           transparent;
    children:                   [ "inputbar", "imagebox" ];
    border-radius:              12px;
}

/* ---- Imagebox ---- */
imagebox {
    background-color:           transparent;
    orientation:                horizontal;
    children:                   [ "mode-switcher",  "listbox"];
}

/* ---- Listbox ---- */
listbox {
    spacing:                    4px;
    orientation:                vertical;
    children:                   ["listview" ];
	padding:					6px;
    border-radius:              12px;
    border:                     1px;
    border-color:               @active-background;
    background-color:           rgba(255, 255, 255, 0.5);
}

/* ---- Dummy ---- */
dummy {
    background-color:           transparent;
}

/* ---- Inputbar ---- */
inputbar {
    enabled:                    true;
    text-color:                 black;
    spacing:                    10px;
    border-radius:              12px;
    border-color:               @foreground;
    background-color:           rgba(255, 255, 255, 0.5);
    children:                   [ "textbox-prompt-colon","entry" ];
    border:                     1px;
    border-color:               @active-background;
}

textbox-prompt-colon {
    enabled:                    true;
	padding:					6px 0px 6px 10px;
    expand:                     false;
    str:                           "üêß";
    text-color:                 black;
	background-color:			transparent;
}

entry {
    enabled:                    true;
	padding:					6px 0px 0px 0px;
    text-color:                 black;
    cursor:                     text;
    placeholder:                "Search (ctrl tab to choose mode)";
    placeholder-color:          inherit;
	background-color:			transparent;
}

/* ---- Mode Switcher ---- */
mode-switcher{
	orientation:				vertical;
    enabled:                    true;
    spacing:                    12px;
    background-color:          	transparent;
    text-color:                 black;
}

button {
    padding:                   0px 12px 0px 8px;
    border-radius:             12px;
    background-color:           rgba(255, 255, 255, 0.5);
    text-color:                black;
    cursor:                    pointer;
    border:                     1px;
    border-color:               @active-background;
}

button selected {
    background-color:           rgba(0, 0, 0, 0.5);
    text-color:                black;
    border:                    1px;
    border-color:              @background;
	
}

/* ---- Listview ---- */
listview {
	enabled:					true;
	columns:					2;
	lines:						5;
	spacing:                    5px;
	padding:					6px;
	dynamic:                    true;
	cycle:                      true;
	scrollbar:                  false;
	layout:                     vertical;
	reverse:                    false;
	fixed-height:               true;
	fixed-columns:              false;
	background-color:           transparent;
	border-radius:   	        12px;
	border:						0px;
}

/* ---- Element ---- */
element {
    enabled:                    true;
    padding:                    5px;
    margin:                     2px;
    cursor:                     pointer;
    background-color:         	transparent;
    border-radius:              12px;
    border:                     0px;
}

element normal.normal {
    background-color:           inherit;
    text-color:                 black;
}

element normal.urgent {
    background-color:           inherit;
    text-color:                 black;
}

element normal.active {
    background-color:           inherit;
    text-color:                 black;
}

element selected.normal {
    background-color:           rgba(0, 0, 0, 0.5);
    text-color:                 black;
}

element selected.urgent {
    background-color:           inherit;
    text-color:                 black;
}

element selected.active {
    background-color:           inherit;
    text-color:                 black;
}

element alternate.normal {
    background-color:           inherit;
    text-color:                 black;
}

element alternate.urgent {
    background-color:           inherit;
    text-color:                 black;
}

element alternate.active {
    background-color:           inherit;
    text-color:                 black;
}

element-icon {
    background-color:           transparent;
    text-color:                 black;
    size:                       32px;
    cursor:                     inherit;
}

element-text {
    background-color:           transparent;
    text-color:                 black;
    cursor:                     inherit;
    vertical-align:             0.5;
    horizontal-align:           0;
}

/*****----- Message -----*****/
message {
    background-color:           @background;
    margin:						20px 0px 0px 0px;
    border-radius: 				12px;
}

textbox {
    padding:                    10px;
    background-color:      		@background;
    text-color:                 black;
}

error-message {
    padding:                    15px;
    border-radius:            	12px;
    background-color:      		@background;
    text-color:                 black;
}
